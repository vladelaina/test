/**
 * @file help_dialog.rc
 * @brief CLI command reference help dialog
 */
#include <windows.h>
#include "resource.h"

/** @brief Comprehensive CLI help dialog with embedded usage documentation */
IDD_CLI_HELP_DIALOG DIALOGEX 0, 0, 360, 260
STYLE DS_SETFONT | DS_MODALFRAME | DS_CENTER | DS_FIXEDSYS | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "Catime CLI Help"
FONT 8, "MS Shell Dlg", 400, 0, 0x1
BEGIN
    /** Comprehensive CLI documentation in scrollable read-only text control */
    CONTROL \
"Usage: catime <argument>\r\n\r\n"
"Countdown inputs (same rules as UI):\r\n"
"  25        = 25 minutes\r\n"
"  25h       = 25 hours\r\n"
"  25s       = 25 seconds\r\n"
"  25 30     = 25 minutes 30 seconds\r\n"
"  25 30m    = 25 hours 30 minutes\r\n"
"  1 30 20   = 1 hour 30 minutes 20 seconds\r\n"
"  130 20    = 1 hour 30 minutes 20 seconds (compact HMM + SS)\r\n"
"  17 20t    = countdown to 17:20 today (or tomorrow if passed)\r\n"
"  1720t     = countdown to 17:20 (compact HHMMt)\r\n"
"  9 9 9t    = countdown to 9:9:9\r\n\r\n"
"Quick modes (single-letter):\r\n"
"  s         = show current time\r\n"
"  u         = start count up\r\n"
"  q1        = start Quick Countdown 1\r\n"
"  q2        = start Quick Countdown 2\r\n"
"  q3        = start Quick Countdown 3\r\n"
"  p         = start Pomodoro\r\n"
"  p<number> = start Quick Countdown by index (e.g., p4)\r\n"
"  v         = toggle visibility\r\n"
"  e         = enter edit mode\r\n"
"  pr        = pause or resume the timer\r\n"
"  r         = restart the current timer\r\n\r\n"
"  h         = show this help dialog\r\n"
"Examples:\r\n"
"  catime 25\r\n"
"  catime 1720t\r\n"
"  catime q1\r\n"
"  catime v\r\n"
"  catime p4\r\n",
            IDC_CLI_HELP_EDIT, "EDIT", WS_CHILD | WS_VISIBLE | WS_VSCROLL | ES_MULTILINE | ES_READONLY | ES_AUTOVSCROLL, 10, 10, 340, 215
    DEFPUSHBUTTON   "OK", IDOK, 285, 235, 65, 14
END


