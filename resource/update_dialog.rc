/**
 * @file update_dialog.rc
 * @brief Software update notification and confirmation dialog
 */
#include <windows.h>
#include "resource.h"

#pragma code_page(65001)

/** @brief Update availability notification with release notes and user choice buttons */
IDD_UPDATE_DIALOG DIALOGEX 0, 0, 300, 220
STYLE DS_MODALFRAME | DS_CENTER | WS_POPUP | WS_CAPTION | WS_SYSMENU
FONT 10, "Microsoft YaHei UI"
BEGIN
    /** Update information text populated at runtime */
    CTEXT           "", IDC_UPDATE_TEXT, 8, 8, 284, 18
    /** Release notes text box with scrollbar */
    CONTROL         "", IDC_UPDATE_NOTES, "EDIT", WS_CHILD | WS_VISIBLE | WS_VSCROLL | ES_MULTILINE | ES_READONLY | ES_AUTOVSCROLL, 8, 30, 284, 140
    /** Exit instruction text */
    CTEXT           "", IDC_UPDATE_EXIT_TEXT, 8, 175, 284, 10
    /** Accept update button */
    PUSHBUTTON      "", IDYES, 155, 195, 60, 14
    /** Decline update button */
    PUSHBUTTON      "", IDNO, 85, 195, 60, 14
    /** Hidden OK button for single-button mode */
    DEFPUSHBUTTON   "", IDOK, 120, 195, 60, 14, NOT WS_VISIBLE
END 