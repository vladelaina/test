/**
 * @file pomodoro_time_dialog.rc
 * @brief Individual Pomodoro timer duration configuration dialog
 */
#include <windows.h>
#include "resource.h"

#pragma code_page(65001)

/** @brief Dialog for configuring individual Pomodoro timer durations */
CLOCK_IDD_POMODORO_TIME_DIALOG DIALOGEX 0, 0, 200, 130
STYLE DS_MODALFRAME | DS_CENTER | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION ""
FONT 9, "Segoe UI"
BEGIN
    /** Runtime-populated instructions for specific timer type */
    LTEXT           "", CLOCK_IDC_STATIC, 10, 10, 180, 60
    /** Time duration input supporting countdown format */
    EDITTEXT        CLOCK_IDC_EDIT, 10, 75, 180, 20, ES_AUTOHSCROLL | ES_MULTILINE
    /** Save configuration button */
    PUSHBUTTON      "", CLOCK_IDC_BUTTON_OK, 140, 100, 50, 14
END 