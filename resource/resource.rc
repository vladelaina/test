/** @brief Generic input dialog for user text entry */
IDD_INPUTBOX DIALOGEX 0, 0, 240, 90
STYLE DS_SETFONT | DS_MODALFRAME | DS_FIXEDSYS | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "Input"
FONT 8, "MS Shell Dlg", 400, 0, 0x1
BEGIN
    LTEXT           "Please enter:", IDC_STATIC_PROMPT, 7, 7, 226, 14
    EDITTEXT        IDC_EDIT_INPUT, 7, 24, 226, 14, ES_AUTOHSCROLL
    DEFPUSHBUTTON   "OK", IDOK, 123, 69, 50, 14
    PUSHBUTTON      "Cancel", IDCANCEL, 183, 69, 50, 14
END

